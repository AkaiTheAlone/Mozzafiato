@model Lanche

<div class="col-sm-12 col-md-6 col-lg-4 mb-4">
    <div class="card" style="border: 1px solid #6c1d1c; border-radius: 10px;">
        <img src="@Model.ImagemUrl" class="card-img-top" alt="@Model.Nome" style="border-top-left-radius: 10px; border-top-right-radius: 10px;" />
        <div class="card-body">
            <h3 class="card-title text-primary">@Model.Nome</h3>
            <h5 class="card-subtitle mb-2 text-muted">Preço: @Model.Preco.ToString("c")</h5>
            <p class="card-text">@Model.DescricaoCurta</p>
            <a class="btn btn-bordeaux" asp-controller="Lanche"
               asp-action="Details"
               asp-route-LancheId="@Model.LancheId">
                Ver mais sobre @Model.Nome
            </a>
            <div class="mt-3">
                <a class="btn btn-primary" id="cartButton"
                   asp-controller="CarrinhoCompra"
                   asp-action="AdicionarItemNoCarrinho"
                   asp-route-LancheId="@Model.LancheId">
                    Incluir no carrinho
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-bordeaux {
        background-color: #6c1d1c;
        color: #ffffff;
        border: none;
    }
    .btn-bordeaux:hover {
        background-color: #4a0f0d;
        color: #ffffff;
    }
    .card {
        border-color: #6c1d1c; /* Bordeaux border color */
    }
    .card-title {
        color: #6c1d1c; /* Bordeaux color for card title */
    }
    .card-body {
        background-color: #f8f9fa; /* Light background for card body */
    }
    .card-text {
        color: #333333; /* Dark color for text */
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>