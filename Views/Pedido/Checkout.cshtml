@model Pedido

@{
    Layout = "_Layout";
}

<h3 class="mb-4">Quase pronto!</h3>
<hr />

<style>

    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        box-shadow: none;
        transition: border-color 0.3s ease;
    }

</style>

<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Seu nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Endereco2" class="form-label">Endereço Complementar</label>
                <input asp-for="Endereco2" class="form-control" placeholder="Complemento do endereço" />
                <span asp-validation-for="Endereco2" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Cep" class="form-label">CEP</label>
                <input asp-for="Cep" class="form-control" placeholder="CEP" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Cidade" class="form-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Estado" class="form-label">Estado</label>
                <input asp-for="Estado" class="form-control" placeholder="Estado" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Seu email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" placeholder="Seu telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between">
                <input class="btn btn-success" type="submit" value="Concluir Pedido" />
                <a class="btn btn-outline-info" asp-controller="CarrinhoCompra" asp-action="Index">Retornar ao Carrinho</a>
            </div>
        </div>
    </div>
</form>

