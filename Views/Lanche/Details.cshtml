@model Lanche

<div class="container">
    <div class="row">
        <div class="card">

            <div class="text-center">
                <p><img src="@Model.ImagemUrl" class="img-fluid" alt="" height="500" width="400"> </p>
            </div>

            <div class="text-center">
                <h2 class="card-title">@Model.Nome</h2>
                <h8 class="card-text">@Model.DescricaoDetalhada </h8>
            </div>

            <p class="btn btn-group align-content-lg-end">
                <a asp-controller="Lanche"
                   asp-action="list"
                class="btn btn-outline-info">
                    Ver todos os lanches
                </a>
                <a class="btn btn-primary" id="cartButton"
                   asp-controller="CarrinhoCompra"
                   asp-action="AdicionarItemNoCarrinho"
                   asp-route-lancheId="@Model.LancheId">
                    Adicionar @Model.Nome ao carrinho
                </a>
                </p>
        </div>
    </div>
</div>
