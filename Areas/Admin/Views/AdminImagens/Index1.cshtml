<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                
                <div class="form-group align-content-center">
                    
                    <div class="col-md-10">
                        <img src="~/imgs/file-upload.png" width="50" height="50" align="middle" />
                        <p><b>Selecione um ou mais arquivos para enviar</b></p>
                        <p>Arquivos com o mesmo nome serão sobreescritos.</p>
                        <input type="file" name="files" multiple class="button btn-outline-danger" />
                    </div>
                </div>
                <br>
                <div class="align-content-center">
                <input type="submit" value="Enviar Arquivo(s)" class="button btn-outline-success align-content-center" />
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="GetImagens">
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar imagens na pasta do servidor:</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <img src="~/imgs/visualizar.png" width="40" height="40"/>
                        <input type="submit" value="Visualizar Arquivos no servidor" class="button btn-outline-warning" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if (ViewData["Deletado"] !=null)
    {
        <li>@ViewData["Deletado"] </li>
    }

</div>